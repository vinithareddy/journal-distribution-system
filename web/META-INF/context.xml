<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/JDS" reloadable="true">
    <Realm  className="org.apache.catalina.realm.JDBCRealm"
            driverName="com.mysql.jdbc.Driver"
            connectionName="jds"
            connectionPassword="jds"
            connectionURL="jdbc:mysql://localhost/jds"
            userTable="users" userNameCol="username" userCredCol="password"
            userRoleTable="user_role" roleNameCol="role"/>

    <Resource name="jdbc/jds"
              defaultAutoCommit="true"
              auth="Container"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              type="javax.sql.DataSource"
              testWhileIdle="true"
              testOnBorrow="true"
              testOnReturn="false"
              validationQuery="SELECT 1"
              validationInterval="30000"
              timeBetweenEvictionRunsMillis="5000"
              maxActive="100"
              minIdle="0"
              maxIdle="5"
              maxWait="30000"
              initialSize="0"
              removeAbandonedTimeout="60"
              removeAbandoned="true"
              logAbandoned="false"
              minEvictableIdleTimeMillis="120000"
              jmxEnabled="true"
              jdbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer"
              username="jds"
              password="jds"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost/jds"/>
    
    <Resource name="bonecp/jds" 
              defaultAutoCommit="true"
              auth="Container"
              factory="com.jolbox.bonecp.BoneCPDataSource"
              type="com.jolbox.bonecp.BoneCPDataSource"
              idleMaxAge="240"
              idleConnectionTestPeriod="60"
              partitionCount="3"
              acquireIncrement="5"
              maxConnectionsPerPartition="20"
              minConnectionsPerPartition="5"
              statementsCacheSize="50"
              releaseHelperThreads="5"
              username="jds"
              password="jds"
              driverClassName="com.mysql.jdbc.Driver"
              jdbcUrl="jdbc:mysql://localhost/jds"/>
</Context>

